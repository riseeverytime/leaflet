{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "plugin:flowtype/recommended",
    "standard",
    "standard-react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "jsx": true,
    "sourceType": "module"
  },
  "plugins": [
    "flowtype",
    "react"
  ],
  "rules": {
    "comma-dangle": [1, "always-multiline"],
    "jsx-quotes": [2, "prefer-single"],
    "no-unused-vars": [2, { "varsIgnorePattern": "^_" }]
  }
}
